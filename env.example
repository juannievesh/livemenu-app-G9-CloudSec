# Database Configuration
POSTGRES_USER=livemenu
POSTGRES_PASSWORD=livemenu_pass
POSTGRES_DB=livemenu_db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://livemenu:livemenu_pass@localhost:5432/livemenu_db

# Backend Configuration
BACKEND_PORT=8000
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Object Storage (para imágenes - configurar según proveedor)
STORAGE_TYPE=local
STORAGE_PATH=./uploads
# Si usas S3 o similar, descomenta y configura:
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# S3_BUCKET_NAME=

# Worker Pool Configuration
WORKER_POOL_SIZE=4

# Environment
ENVIRONMENT=development